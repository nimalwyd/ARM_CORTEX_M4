<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/im1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/bg2"/>
    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/im1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="#fcd116"
        >

        <EditText
            android:layout_marginTop="1dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/search"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"

            android:background="@drawable/search_button"/>



    </LinearLayout>

<RelativeLayout
    android:id="@+id/fir"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_below="@+id/li1"
    android:paddingRight="13dp"


   >




    <TextView

        android:id="@+id/nametvz"
        android:layout_width="wrap_content"
        android:layout_height="47dp"

        android:text="Mr.Fix It Tech LLC"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/underlineblue"
        android:textStyle="bold"

        android:paddingTop="6dp"
        android:textSize="16sp"
        android:textColor="#000000"
        />

    <TextView

        android:textColor="#6D6F70"
        android:id="@+id/nametvz1"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@+id/nametvz"
       android:layout_alignParentRight="true"

        android:textSize="12sp"
        android:text="www.mrfixittech.com"

        android:gravity="center"
        />


    <ImageView
        android:id="@+id/imageview2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/t"



        />



    <RatingBar
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/ratingBar"
        android:layout_alignBaseline="@+id/nametvz1"


        android:layout_alignParentRight="true"



        style="@style/Widget.AppCompat.RatingBar"


        />




</RelativeLayout>
    
  <RelativeLayout
      android:id="@+id/rel2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/fir">
    <ImageView
        android:id="@+id/imgz1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/blue"
        android:scaleType="fitXY"
        />

            
     <LinearLayout
         android:layout_below="@+id/imgz1"
         android:layout_width="match_parent"
         android:layout_height="350dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="350dp"
            android:layout_weight="5"
             android:paddingRight="2.5dp"
             android:paddingBottom="5dp"
             android:paddingTop="20dp"
             android:paddingLeft="5dp"
             android:orientation="vertical"
            >

             <TextView
                 android:paddingTop="10dp"
                 android:textColor="#ffffff"
                 android:paddingLeft="12dp"
                 android:textStyle="bold"
                 android:id="@+id/t1"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:text="OUR SPECIALIST"
                 android:background="#FA9F02"
                 android:textSize="14sp"/>

             <TextView

             android:layout_marginTop="5dp"
             android:paddingTop="7dp"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:text="INTERIOR"
             android:background="@drawable/page4yellowrounded"
             android:textColor="#919191"
             android:paddingLeft="12dp"
             android:textSize="11sp"
             android:textStyle="bold"
             />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="REPAIRS"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="ELECTRICAL"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="INTERIOR"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="REPAIRS"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="ELECTRICAL"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="REPAIRS"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

             <TextView

                 android:layout_marginTop="5dp"
                 android:paddingTop="7dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="ELECTRICAL"
                 android:background="@drawable/page4yellowrounded"
                 android:textColor="#919191"
                 android:paddingLeft="12dp"
                 android:textSize="11sp"
                 android:textStyle="bold"
                 />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="350dp"
             android:layout_weight="5"
            android:paddingRight="5dp"
             android:paddingBottom="5dp"
             android:paddingTop="20dp"
             android:paddingLeft="2.5dp"
             android:orientation="vertical">

             <TextView
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="View Phone"
             android:background="@drawable/page4blueround"
             android:textSize="17sp"
             android:gravity="center"
             android:textStyle="bold"
                 android:textColor="#ffffff"
             />
             <TextView
                 android:layout_marginTop="13dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:text="View Email"
                 android:background="@drawable/page4blueround"
                 android:textSize="17sp"
                 android:gravity="center"
                 android:textStyle="bold"
                 android:textColor="#ffffff"
                 />
             <TextView
                 android:layout_marginTop="50dp"
                 android:layout_width="match_parent"
                 android:layout_height="130dp"
                 android:id="@+id/tet"
                 android:background="@drawable/page4yellowround"
                 android:textSize="25sp"
                 android:gravity="center"
                 android:textStyle="bold"
                 android:textColor="#000000"
                 android:text="ASK  FOR QUOTE"
                 />

         </LinearLayout>







     </LinearLayout>
      </RelativeLayout>

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/rel2"
               >

              <Spinner
                    android:id="@+id/spinnerloc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"


                    />


            </RelativeLayout>














</RelativeLayout>
    </ScrollView>

</RelativeLayout>
